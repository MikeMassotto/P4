/*header*/

header h1{
	text-align: center;
	color: #800000;
}

/*nav menu*/
#nav_menu ul {
	list-style-type: none;
	margin-bottom: 15%;
	padding: 0;
	position: relative;
	background-color: #800000;
}
#nav_menu ul li {
	float: left;
	width: 25%;
}

#nav_menu ul li input {
	float: left;
	margin: 5%;
}

#nav_menu ul li a {
    display: block;
    width: 160px;
    text-align: center;
    padding: 1em 0;
    text-decoration: none;
    color: white;
    font-weight: bold;
}
#nav_menu a.current {
	color: yellow;
}
#nav_menu ul ul {
    display: none;
    position: absolute;
    top: 100%;
}
#nav_menu ul ul li {
	float: none;
}
#nav_menu ul li:hover > ul {
	display: block;
}
#nav_menu > ul::after {
    content: "";
    clear: both;
    display: block;
}

/*main styles*/

main h1{
	text-align: center;
	color: #800000;
}

/*card styles*/

#cards ul{
	list-style-type: none;
}

#cards ul .card-head {
	float: left;
	width: 18%;
	margin: 1% 2%;
	padding: 1%;
	border: solid;
	border-color: #800000;
}
#cards .card-title{
	text-align: center;
	background-color: #800000;
	color: white;
	padding: 6%;
}
#cards .card-img{
	width: 100%;
	height: 80%;
	min-width: 2em;
}
#cards .card-btn{
	text-align: center;
	background-color: #800000;
	color: white;
	padding: 2%;
	display: block;
}

/*footer styles*/
footer {
	background-color: #800000;
	clear: both;
}

footer p{
	color: white;
	text-align: center;
	padding: 1em 0em;
}